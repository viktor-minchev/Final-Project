<Window x:Class="WpfApp1.EditSnippet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="EditSnippet" Height="800" Width="800">
    <Grid>
        <StackPanel Margin="20,20,20,10.5">
            <TextBlock Text="Edit Snippet" Style="{DynamicResource MaterialDesignHeadline1TextBlock}"/>
            <Label Content="Title:"/>
            <TextBox x:Name="txtTitle"/>
            <Label Content="Text:"/>
            <TextBox x:Name="txtText" Margin="0,0,0.333,0" Height="460" Style="{DynamicResource MaterialDesignFilledTextBox}" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"/>
            <Button x:Name="Submit" Content="Submit"   Click="Submit_Click" Margin="0,30,0,0" />
        </StackPanel>
    </Grid>
</Window>
